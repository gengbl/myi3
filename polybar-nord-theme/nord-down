[module/sep]
type = custom/text
content = "|"
content-foreground = ${colors.disabled}
content-padding = 0


[module/wuqing-weather]
type = custom/script
exec = curl -s 'wttr.in/wuqing?format=1' | sed 's/\\xEF\\xB8\\x8F//g'
interval = 60
;click-left = cd ~/workspace/timelineshower/timelineserver && go run main.go &
;click-right = pkill -f "go run main.go"
format-background = ${colors.background}
fomat-padding = 1

